<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fitsSystemWindows="true"
                            android:orientation="vertical"
                            app:carbon_insetColor="?attr/colorPrimary">

    <include layout="@layout/view_debugtoolbar"/>

    <carbon.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <carbon.widget.TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/carbon_padding"
                android:paddingTop="@dimen/carbon_padding"
                android:paddingRight="@dimen/carbon_padding"
                app:carbon_font="@font/lobster"/>

            <carbon.widget.TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/carbon_padding"
                android:paddingTop="@dimen/carbon_padding"
                android:paddingRight="@dimen/carbon_padding"
                app:carbon_font="@font/lekton_regular"/>

            <carbon.widget.TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/carbon_padding"
                android:paddingTop="@dimen/carbon_padding"
                android:paddingRight="@dimen/carbon_padding"
                app:carbon_font="@font/raleway_regular"/>

            <carbon.widget.TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/carbon_padding"
                app:carbon_font="@font/rubik_regular"/>
        </carbon.widget.LinearLayout>
    </carbon.widget.ScrollView>
</carbon.widget.LinearLayout>